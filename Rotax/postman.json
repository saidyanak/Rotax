			"item": [
				{
					"name": "Kullanıcı girişi",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// 200 OK durum kodunu kontrol et",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// JSON cevabını işle",
									"const responseBody = pm.response.json();",
									"",
									"// Cevapta token olup olmadığını ve string formatında olduğunu kontrol et",
									"pm.test(\"Response body contains a token\", function () {",
									"    pm.expect(responseBody.token).to.exist;",
									"    pm.expect(responseBody.token).to.be.a('string');",
									"});",
									"",
									"// Eğer token varsa, 'token' isimli collection değişkenine ata",
									"if (responseBody.token) {",
									"    pm.collectionVariables.set(\"token\", responseBody.token);",
									"    console.log(\"Login Token'ı collection değişkenine kaydedildi.\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
