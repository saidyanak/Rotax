    {
      "name": "Authentication",
      "description": "Kimlik doğrulama ve kullanıcı kayıt işlemleri",
      "item": [
        {
          "name": "Kullanıcı Girişi",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200 OK\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Token is received and set as variable\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.token).to.not.be.empty;",
                  "    pm.collectionVariables.set(\"jwt_token\", jsonData.token);",
                  "    console.log(\"JWT Token has been set.\");",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"usernameOrEmail\": \"driver@test.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Username veya email ile giriş yapma. Başarılı girişte alınan token, diğer tüm istekler için otomatik olarak kullanılacaktır."
          },
          "response": []
        },
        {
          "name": "Yeni Kullanıcı Kaydı (Driver)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200 OK or 201 Created\", function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "pm.test(\"Token is received and set as variable\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.token).to.not.be.empty;",
                  "    pm.collectionVariables.set(\"jwt_token\", jsonData.token);",
                  "    console.log(\"JWT Token has been set after registration.\");",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
